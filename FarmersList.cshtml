@model IEnumerable<Farmer>

<h2>List of Farmers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.FullName</td>
                <td>@farmer.Location</td>
                <td>
                    <a href="@Url.Action("ProductsForFarmer", "Home", new { farmerId = farmer.Id })">View Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>
