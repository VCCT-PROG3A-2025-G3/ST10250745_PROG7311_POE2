@model PROG7311POE2.Models.CreateFarmerViewModel

@{
    ViewBag.Title = "Create or Edit Farmer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h3>Create New Farmer Profile</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="CreateFarmer">
                        <div class="mb-3">
                            <label for="FullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="FullName" name="FullName" required />
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" />
                        </div>

                        <div class="mb-3">
                            <label for="ContactInformation" class="form-label">Contact Information</label>
                            <input type="text" class="form-control" id="ContactInformation" name="ContactInformation" />
                        </div>

                        <div class="mb-3">
                            <label for="Location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="Location" name="Location" required />
                        </div>

                        <button type="submit" class="btn btn-primary">Create Farmer Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
